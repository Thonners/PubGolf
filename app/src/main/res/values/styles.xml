<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Styles -->
    <style name="tv_double_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="launch_card_tv_title" parent="@style/tv_double_wrap">
        <item name="android:textSize">@dimen/launch_card_title</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="launch_card_tv_subtitle" parent="@style/tv_double_wrap">
        <item name="android:textSize">@dimen/launch_card_subtitle</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="tv_scorecard_header">
        <item name="android:color">@color/primary_text</item>
        <item name="android:layout_height">@dimen/sc_row_height</item>
        <item name="android:textSize">@dimen/scorecard_header_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/sc_text_padding</item>
    </style>

    <style name="footer_button_text">
        <item name="android:color">@color/primary_light</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/footer_button_text_size_not_focused</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Rules fragment -->
    <style name="rules_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/primary_text</item>
        <item name="android:textSize">@dimen/rules_body</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="rules_title" parent="rules_body">
        <item name="android:textSize">@dimen/rules_title</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="rules_subtitle" parent="rules_body">
        <item name="android:textSize">@dimen/rules_subtitle</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!-- Animations -->
    <style name="dialog_animation_fade_in_slide_out">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/slide_left_exit</item>
    </style>

    <style name="dialog_animation_slide_in_fade_out">
        <item name="android:windowEnterAnimation">@anim/slide_left_entry</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
