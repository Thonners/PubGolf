<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_outer_margin"
    android:layout_marginLeft="@dimen/card_outer_margin"
    android:layout_marginRight="@dimen/card_outer_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_basic_padding">

        <ImageView
            android:id="@+id/img_card_icon"
            android:layout_width="@dimen/launch_card_icon"
            android:layout_height="@dimen/launch_card_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_main_title"
            style="@style/launch_card_tv_title"
            android:layout_toLeftOf="@+id/img_card_icon"/>


        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/launch_card_tv_subtitle"
            android:layout_alignStart="@+id/tv_main_title"
            android:layout_below="@+id/tv_main_title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>